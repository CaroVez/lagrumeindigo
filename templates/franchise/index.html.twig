{% extends 'base.html.twig' %}

{% block title %}Franchise index{% endblock %}

{% block body %}
    <h1>Franchise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for franchise in franchises %}
            <tr>
                <td>{{ franchise.id }}</td>
                <td>{{ franchise.name }}</td>
                <td>{{ franchise.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('franchise_show', {'id': franchise.id}) }}">show</a>
                    <a href="{{ path('franchise_edit', {'id': franchise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('franchise_new') }}">Create new</a>
{% endblock %}
